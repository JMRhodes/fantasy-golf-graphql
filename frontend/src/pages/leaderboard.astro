</style>

<script is:inline>
  (function () {
    const form = document.querySelector('.card-header-actions');
    const input = document.getElementById('team-search');
    const rows = Array.from(
      document.querySelectorAll('[data-team-row]'),
    );

    if (!(input instanceof HTMLInputElement)) return;

    function applyFilter(value) {
      const term = value.trim().toLowerCase();
      let visibleRank = 1;

      rows.forEach((row) => {
        if (!(row instanceof HTMLElement)) return;
        const teamName = (row.dataset.teamName || '').toLowerCase();
        const matches = !term || teamName.includes(term);

        if (matches) {
          row.style.display = '';
          const rankEl = row.querySelector('[data-rank]');
          if (rankEl instanceof HTMLElement) {
            rankEl.textContent = String(visibleRank++);
          }
        } else {
          row.style.display = 'none';
        }
      });
    }

    // Initialize from URL ?q=
    const params = new URLSearchParams(window.location.search);
    const initial = params.get('q') || '';
    input.value = initial;
    applyFilter(initial);

    input.addEventListener('input', (event) => {
      const value = event.target.value;
      applyFilter(value);

      const url = new URL(window.location.href);
      if (value) {
        url.searchParams.set('q', value);
      } else {
        url.searchParams.delete('q');
      }
      window.history.replaceState({}, '', url.toString());
    });

    if (form instanceof HTMLFormElement) {
      form.addEventListener('submit', (event) => {
        event.preventDefault();
        applyFilter(input.value);
      });
    }
  })();
</script>
