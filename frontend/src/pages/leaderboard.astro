---
import { fetchGraphQL } from '../lib/graphql';

const GET_TEAMS = `
  query GetTeams {
    getAllTeams {
      id
      name
      ownerId {
        id
        name
      }
    }
  }
`;

interface Owner {
  id: string;
  name: string | null;
}

interface Team {
  id: string;
  name: string | null;
  ownerId: Owner | null;
}

interface GetTeamsResponse {
  getAllTeams: Team[];
}
interface LeaderboardRow {
  rank: number;
  teamName: string;
  ownerName: string;
  avatarBg: string;
  avatarFg: string;
}

const pastelPalette: { bg: string; fg: string }[] = [
  { bg: '#fee2e2', fg: '#b91c1c' },
  { bg: '#e0f2fe', fg: '#075985' },
  { bg: '#ecfeff', fg: '#0e7490' },
  { bg: '#fef3c7', fg: '#92400e' },
  { bg: '#e0f2f1', fg: '#00695c' },
  { bg: '#ede9fe', fg: '#5b21b6' },
];

let rows: LeaderboardRow[] = [];
let error: string | null = null;

try {
  const data = await fetchGraphQL<GetTeamsResponse>(GET_TEAMS);
  const teams = data.getAllTeams ?? [];

  rows = teams.map((team, index) => {
    const palette = pastelPalette[index % pastelPalette.length];

    return {
      rank: index + 1,
      teamName: team.name ?? `Team ${index + 1}`,
      ownerName: team.ownerId?.name ?? 'Unknown owner',
      avatarBg: palette.bg,
      avatarFg: palette.fg,
    };
  });
} catch (err) {
  error = err instanceof Error ? err.message : 'Failed to load leaderboard.';
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Teams Leaderboard</title>
  </head>
  <body class="page">
    <main class="shell">
      <section class="card">
        <header class="card-header">
          <div class="card-header-main">
            <p class="eyebrow">Standings</p>
            <h1 class="title">Teams leaderboard</h1>
            <p class="subtitle">Overview of all fantasy teams and their owners.</p>
          </div>

          <form class="card-header-actions" method="get" role="search">
            <label class="sr-only" for="team-search">Search teams</label>
            <input
              id="team-search"
              class="search-input"
              type="search"
              name="q"
              placeholder="Search teams"
            />
          </form>
        </header>

        {error && (
          <div class="state state-error">
            <p>We couldn't load the leaderboard.</p>
            <p class="state-detail">{error}</p>
          </div>
        )}

        {!error && rows.length === 0 && (
          <div class="state">
            <p>No teams found yet.</p>
            <p class="state-detail">Create a team in the app to see it appear here.</p>
          </div>
        )}

        {!error && rows.length > 0 && (
          <div class="table">
            <div class="table-head">
              <span class="col-rank">#</span>
              <span class="col-team">Team</span>
              <span class="col-players">Players</span>
              <span class="col-points">Points</span>
              <span class="col-wins">Wins</span>
            </div>

            <ul class="rows" aria-label="Team standings">
              {rows.map((row) => (
                <li class="row" data-team-row data-team-name={row.teamName}>
                  <span class="col-rank" data-rank>{row.rank}</span>

                  <div class="col-team">
                    <div
                      class="avatar"
                      style={`--avatar-bg: ${row.avatarBg}; --avatar-fg: ${row.avatarFg};`}
                      aria-hidden="true"
                    >
                      {row.teamName.charAt(0).toUpperCase()}
                    </div>
                    <div class="team-meta">
                      <span class="team-name">{row.teamName}</span>
                      <span class="owner-name">{row.ownerName}</span>
                    </div>
                  </div>

                  <div class="col-players">
                    <div
                      class="players-stack"
                      aria-label={`Players for ${row.teamName}`}
                    >
                      {Array.from({ length: 4 }).map((_, i) => (
                        <span
                          class="player-dot"
                          title={`Player ${i + 1} â€¢ ${row.teamName}`}
                        />
                      ))}
                    </div>
                  </div>

                  <span class="col-points">0</span>
                  <span class="col-wins">0</span>
                </li>
              ))}
            </ul>
          </div>
        )}
      </section>
    </main>
  </body>
</html>

<style>
